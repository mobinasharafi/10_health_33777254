<!DOCTYPE html>
<html>
<head>
    <title>Your Vision Board</title>
    <% const BASE = '/usr/455'; %>
    <link rel="stylesheet" href="<%= BASE %>/css/style.css">
    ...
</head>
<body>

<nav>
    <a href="<%= BASE %>/">Home</a>
    <a href="<%= BASE %>/about">About</a>

    <% if (session && session.userId) { %>
        <a href="<%= BASE %>/records">View My Records</a>
        <a href="<%= BASE %>/profile">Profile</a>
        <a href="<%= BASE %>/vision">Vision Board</a>
        <a href="<%= BASE %>/logout">Logout</a>
    <% } else { %>
        <a href="<%= BASE %>/login">Login</a>
        <a href="<%= BASE %>/register">Register</a>
    <% } %>
</nav>

<h1>Your Vision Board</h1>

<div class="vision-container">

    <% if (visionText && visionText.trim() !== "") { %>

        <p class="saved-vision"><%= visionText %></p>

        <form action="<%= BASE %>/vision/edit" method="GET" class="edit-form">
            <button class="edit-btn" type="submit">Edit Vision</button>
        </form>

    <% } else { %>

        <form action="<%= BASE %>/vision" method="POST">
            <label>Tell us about your vision for your health journey:</label>
            <textarea name="vision_text" required></textarea>
            <br>
            <button type="submit">Save Vision</button>
        </form>

    <% } %>

    <h2>Add an image to your vision board</h2>

    <form action="<%= BASE %>/vision/upload" method="POST" enctype="multipart/form-data">
        <input type="file" name="vision_image" accept="image/*" required>
        <button type="submit">Upload</button>
    </form>

    <h2>Your Images</h2>

    <% if (images.length === 0) { %>
        <p>You haven't added any images yet.</p>
    <% } else { %>
        <div class="image-grid">
            <% images.forEach(img => { %>
                <div class="image-wrapper">
                    <img src="<%= BASE %>/uploads/<%= img.filename %>" alt="Vision Image">

                    <form
                        action="<%= BASE %>/vision/delete-image/<%= img.id %>?_method=DELETE"
                        method="POST"
                        onsubmit="return confirmDelete(event)"
                    >
                        <button class="delete-btn" type="submit">Ã—</button>
                    </form>
                </div>
            <% }) %>
        </div>
    <% } %>

</div>
</body>
</html>
