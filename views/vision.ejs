<!DOCTYPE html>
<html>
<head>
    <title>Your Vision Board</title>
    <link rel="stylesheet" href="<%= basePath %>/css/style.css">

    <style>
        .vision-container {
            max-width: 700px;
            margin: auto;
        }
        textarea {
            width: 100%;
            height: 120px;
            padding: 10px;
            border-radius: 6px;
            border: 1px solid #ccc;
        }
        .saved-vision {
            font-size: 0.9rem;
            line-height: 1.4;
            margin-bottom: 4px;
            color: black;
        }
        .edit-form {
            width: 100%;
            margin: 5px 0 10px 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .edit-btn {
            font-size: 0.75rem;
            padding: 4px 10px;
            display: block;
            margin: 0 auto;
            transform: translateX(65px);
        }
        .image-grid {
            margin-top: 10px;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 10px;
        }
        .image-wrapper {
            position: relative;
            width: 100%;
            height: 150px;
            overflow: hidden;
            border-radius: 8px;
        }
        .image-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .delete-btn {
            position: absolute;
            top: 5px;
            right: 5px;
            background: rgba(120, 0, 0, 0.80);
            color: white;
            border: none;
            border-radius: 50%;
            width: 16px;
            height: 16px;
            font-size: 10px;
            cursor: pointer;
        }
    </style>
</head>
<body>

<nav>
    <a href="<%= basePath %>/">Home</a>
    <a href="<%= basePath %>/about">About</a>

    <% if (session && session.userId) { %>
        <a href="<%= basePath %>/records">View My Records</a>
        <a href="<%= basePath %>/profile">Profile</a>
        <a href="<%= basePath %>/vision">Vision Board</a>
        <a href="<%= basePath %>/logout">Logout</a>
    <% } else { %>
        <a href="<%= basePath %>/login">Login</a>
        <a href="<%= basePath %>/register">Register</a>
    <% } %>
</nav>

<h1>Your Vision Board</h1>

<div class="vision-container">

    <% if (visionText && visionText.trim() !== "") { %>
        <p class="saved-vision"><%= visionText %></p>

        <form action="<%= basePath %>/vision/edit" method="GET" class="edit-form">
            <button class="edit-btn" type="submit">Edit Vision</button>
        </form>
    <% } else { %>
        <form action="<%= basePath %>/vision" method="POST">
            <label>Tell us about your vision for your health journey:</label>
            <textarea name="vision_text" required></textarea>
            <button type="submit">Save Vision</button>
        </form>
    <% } %>

    <h2>Add an image</h2>

    <form action="<%= basePath %>/vision/upload" method="POST" enctype="multipart/form-data">
        <input type="file" name="vision_image" required>
        <button type="submit">Upload</button>
    </form>

    <h2>Your Images</h2>

    <div class="image-grid">
        <% images.forEach(img => { %>
            <div class="image-wrapper">
                <img src="<%= basePath %>/uploads/<%= img.filename %>">

                <form action="<%= basePath %>/vision/delete-image/<%= img.id %>?_method=DELETE"
                      method="POST">
                    <button class="delete-btn">Ã—</button>
                </form>
            </div>
        <% }) %>
    </div>

</div>

</body>
</html>
