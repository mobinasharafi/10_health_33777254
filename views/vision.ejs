<!DOCTYPE html>
<html>
<head>
    <title>Your Vision Board</title>
    <link rel="stylesheet" href="/usr/455/css/style.css">

    <style>
        .vision-container {
            max-width: 700px;
            margin: auto;
        }

        textarea {
            width: 100%;
            height: 120px;
            padding: 10px;
            border-radius: 6px;
            border: 1px solid #ccc;
        }

        .saved-vision {
            font-size: 0.9rem;
            line-height: 1.4;
            margin-bottom: 4px;
            color: black;
        }

        .edit-form {
            width: 100%;
            margin: 5px 0 10px 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .edit-btn {
            font-size: 0.75rem;
            padding: 4px 10px;
            display: block;
            margin: 0 auto;
            text-align: center;
            transform: translateX(65px);
        }

        .image-grid {
            margin-top: 10px;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 10px;
        }

        .image-wrapper {
            position: relative;
            width: 100%;
            height: 150px;
            overflow: hidden;
            border-radius: 8px;
        }

        .image-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .delete-btn {
            position: absolute;
            top: 5px;
            right: 5px;
            background: rgba(120, 0, 0, 0.80);
            color: white;
            border: none;
            border-radius: 50%;
            width: 16px;
            height: 16px;
            font-size: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            padding: 0;
        }

        h2 {
            margin: 15px 0 5px 0;
        }
    </style>
</head>
<body>

<nav>
    <a href="/usr/455/">Home</a>
    <a href="/usr/455/about">About</a>

    <% if (session && session.userId) { %>
        <a href="/usr/455/records">View My Records</a>
        <a href="/usr/455/profile">Profile</a>
        <a href="/usr/455/vision">Vision Board</a>
        <a href="/usr/455/logout">Logout</a>
    <% } else { %>
        <a href="/usr/455/login">Login</a>
        <a href="/usr/455/register">Register</a>
    <% } %>
</nav>

<h1>Your Vision Board</h1>

<div class="vision-container">

    <% if (visionText && visionText.trim() !== "") { %>

        <p class="saved-vision"><%= visionText %></p>

        <form action="/usr/455/vision/edit" method="GET" class="edit-form">
            <button class="edit-btn" type="submit">Edit Vision</button>
        </form>

    <% } else { %>

        <form action="/usr/455/vision" method="POST" style="margin-bottom: 10px;">
            <label>Tell us about your vision for your health journey:</label>
            <textarea name="vision_text" required></textarea>
            <br>
            <button type="submit">Save Vision</button>
        </form>

    <% } %>

    <h2>Add an image to your vision board</h2>

    <form action="/usr/455/vision/upload" method="POST" enctype="multipart/form-data" style="margin-bottom: 8px;">
        <input type="file" name="vision_image" accept="image/*" required>
        <button type="submit">Upload</button>
    </form>

    <h2>Your Images</h2>

    <% if (images.length === 0) { %>
        <p>You haven't added any images yet.</p>
    <% } else { %>
        <div class="image-grid">
            <% images.forEach(img => { %>
                <div class="image-wrapper">

                    <img src="/usr/455/uploads/<%= img.filename %>" alt="Vision Image">

                    <form 
                        action="/usr/455/vision/delete-image/<%= img.id %>?_method=DELETE" 
                        method="POST"
                        onsubmit="return confirmDelete(event)"
                    >
                        <button class="delete-btn" type="submit">Ã—</button>
                    </form>

                </div>
            <% }) %>
        </div>
    <% } %>

</div>

<script>
    function confirmDelete(e) {
        e.preventDefault();

        const confirmed = window.confirm(
            "Are you sure you want to delete this image from your vision board?"
        );

        if (confirmed) {
            e.target.submit();
        }

        return false;
    }
</script>

</body>
</html>
