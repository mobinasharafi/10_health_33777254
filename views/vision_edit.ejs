<h1>Edit Your Vision</h1>

<div class="edit-container">
    <form action="<%= BASE %>/vision/update" method="POST">
        <label>Edit your vision text:</label>
        <textarea name="vision_text" required><%= visionText %></textarea>
        <button type="submit" class="save-btn">Save Changes</button>
    </form>
</div>

</body>
